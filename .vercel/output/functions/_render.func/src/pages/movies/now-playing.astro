---
import Layout from '../../layouts/Layout.astro';
import MovieCard from '../../components/MovieCard.astro';
import { fetchNowPlayingMovies } from '../../lib/tmdb';

const page = parseInt(Astro.url.searchParams.get('page') || '1');
const movies = await fetchNowPlayingMovies();
---

<Layout title="Now Playing Movies - Friday Masala" description="Discover movies currently playing in theaters. Find the latest releases and new films.">
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">üé¨ Now Playing</h1>
      <p class="text-gray-600 text-lg">
        Discover movies currently playing in theaters around the world. Find the latest releases 
        and new films that are making waves.
      </p>
    </div>

    <!-- Movies Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
      {movies.map((movie) => (
        <MovieCard movie={movie} />
      ))}
    </div>

    <!-- Pagination -->
    <div class="mt-12 flex justify-center">
      <nav class="flex items-center space-x-2">
        <a 
          href={`/movies/now-playing?page=${Math.max(1, page - 1)}`}
          class={`px-4 py-2 rounded-lg ${
            page <= 1 
              ? 'bg-gray-300 text-gray-500 cursor-not-allowed' 
              : 'bg-red-500 text-white hover:bg-red-600'
          }`}
        >
          ‚Üê Previous
        </a>
        
        <span class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg">
          Page {page}
        </span>
        
        <a 
          href={`/movies/now-playing?page=${page + 1}`}
          class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600"
        >
          Next ‚Üí
        </a>
      </nav>
    </div>
  </div>
</Layout> 