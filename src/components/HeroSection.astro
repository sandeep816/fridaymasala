---
import { getImageUrl } from '../lib/tmdb';
import type { Movie } from '../lib/tmdb';

interface Props {
  featuredMovies: Movie[];
}

const { featuredMovies } = Astro.props;
---

<section class="relative bg-gradient-to-r from-gray-900 to-gray-800 text-white py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h1 class="text-5xl md:text-6xl font-bold mb-4">
        Welcome to <span class="text-red-500">Friday Masala</span>
      </h1>
      <p class="text-xl text-gray-300 mb-8">
        Your ultimate destination for movies, reviews, and entertainment
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/movies/popular" class="bg-red-500 hover:bg-red-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
          Explore Popular Movies
        </a>
        <a href="/movies/trending" class="bg-transparent border-2 border-white hover:bg-white hover:text-gray-900 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
          Trending Now
        </a>
      </div>
    </div>

    <!-- Featured Movies Carousel -->
    {featuredMovies.length > 0 && (
      <div class="relative">
        <h2 class="text-2xl font-bold mb-6 text-center">Featured Movies</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {featuredMovies.slice(0, 3).map((movie) => {
            const posterUrl = getImageUrl(movie.poster_path, 'w500');
            const backdropUrl = getImageUrl(movie.backdrop_path, 'w1280');
            const rating = movie.vote_average.toFixed(1);
            const year = movie.release_date ? new Date(movie.release_date).getFullYear() : 'N/A';
            
            return (
              <div class="relative group overflow-hidden rounded-lg shadow-xl">
                <a href={`/movie/${movie.id}`} class="block">
                  <div class="relative h-80">
                    <img 
                      src={backdropUrl} 
                      alt={movie.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
                    
                    <!-- Movie Info Overlay -->
                    <div class="absolute bottom-0 left-0 right-0 p-6">
                      <div class="flex items-center gap-2 mb-2">
                        <span class="bg-yellow-500 text-black px-2 py-1 rounded text-sm font-bold">
                          ‚≠ê {rating}
                        </span>
                        <span class="bg-red-500 text-white px-2 py-1 rounded text-sm font-bold">
                          {year}
                        </span>
                      </div>
                      <h3 class="text-xl font-bold mb-2 group-hover:text-red-400 transition-colors">
                        {movie.title}
                      </h3>
                      <p class="text-gray-300 text-sm line-clamp-2">
                        {movie.overview || 'No overview available'}
                      </p>
                    </div>
                  </div>
                </a>
              </div>
            );
          })}
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 